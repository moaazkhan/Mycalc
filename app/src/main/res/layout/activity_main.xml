<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"  android:stretchColumns="*" android:background="#dcdcdc">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="#FF0000"
            android:text="Small Text"
            android:id="@+id/textView"
            android:textSize="50px"
            android:layout_column="0"
            android:layout_span="4"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="60dp"
            android:minHeight="60dp" />
    </TableRow>
        


    <!-- Row 1 with single column -->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:minHeight="10dp"
        android:minWidth="10dp">

        <Button
            android:id="@+id/Button" android:text="bck"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/Button1" android:text="AC"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/Button2" android:text="%"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/Button3" android:text="/"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


    </TableRow>

    <!-- Row 2 with 3 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:minHeight="10dp"
        android:minWidth="10dp">
        <Button
            android:id="@+id/Button4" android:text="7"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
        <Button
            android:id="@+id/Button5" android:text="8"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
        <Button
            android:id="@+id/Button6" android:text="9"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
        <Button
            android:id="@+id/Button7" android:text="x"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" />
    </TableRow>

    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:minHeight="10dp"
        android:minWidth="10dp">
        <Button
            android:id="@+id/Button8" android:text="4"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/Button9" android:text="5"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/Button10" android:text="6"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/Button11" android:text="-"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" />
    </TableRow>

    <!-- Row 4 -->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center|center_horizontal"
        android:minHeight="10dp"
        android:minWidth="10dp">
        <Button
            android:id="@+id/Button12" android:text="1"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/Button13" android:text="2"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/Button14" android:text="3"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/Button15" android:text="+"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </TableRow>

    <!-- Row 5 -->
    <TableRow
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:minHeight="10dp"
        android:minWidth="10dp">
        <Button
            android:id="@+id/Button16" android:text="0"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAlignment="gravity"
            android:gravity="center" />
        <Button
            android:id="@+id/Button17" android:text="00"
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAlignment="gravity"
            android:gravity="center" />
        <Button
            android:id="@+id/Button18" android:text="."
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        
        <Button
            android:id="@+id/Button19" android:text="="
            android:layout_weight="1" android:background="#dcdcdc"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </TableRow>




</TableLayout>